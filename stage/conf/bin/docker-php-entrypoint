#!/bin/bash
set -e

# Write env vars to config.

token_replace() {
    # Get env value.
    eval "val=\$$1"
    # Escape regex chars.
    val=$(echo "$val" | sed -e 's/[\/&]/\\&/g')
    # shellcheck disable=2154
    sed -i 's/%'"$1"'%/'"$val"'/' "$2"
}

vars=(
    PHPFPM_LISTEN
    PHPFPM_PM_MAX_CHILDREN
    PHPFPM_PM_START_SERVERS
    PHPFPM_PM_MIN_SPARE_SERVERS
    PHPFPM_PM_MAX_SPARE_SERVERS
)
for var in "${vars[@]}"; do
    token_replace $var /usr/local/etc/php-fpm.d/zz-docker.conf
done

vars=(
    MSMTP_HOST
    MSMTP_PORT
    MSMTP_FROM
)
for var in "${vars[@]}"; do
    token_replace $var /etc/msmtprc
done

vars=(
    PHP_ALLOW_URL_FOPEN
    PHP_CLI_MAX_EXECUTION_TIME
    PHP_CLI_MEMORY_LIMIT
    PHP_CLI_OPCACHE_ENABLE_CLI
    PHP_CLI_REALPATH_CACHE_SIZE
    PHP_CLI_REALPATH_CACHE_TTL
    PHP_CLI_SENDMAIL_PATH
    PHP_MAX_EXECUTION_TIME
    PHP_MAX_FILE_UPLOADS
    PHP_MAX_INPUT_VARS
    PHP_MEMORY_LIMIT
    PHP_OPCACHE_ENABLE
    PHP_OPCACHE_FAST_SHUTDOWN
    PHP_OPCACHE_INTERNED_STRINGS_BUFFER
    PHP_OPCACHE_MAX_ACCELERATED_FILES
    PHP_OPCACHE_MEMORY_CONSUMPTION
    PHP_OPCACHE_REVALIDATE_FREQ
    PHP_OPCACHE_VALIDATE_TIMESTAMPS
    PHP_POST_MAX_SIZE
    PHP_REALPATH_CACHE_SIZE
    PHP_REALPATH_CACHE_TTL
    PHP_SENDMAIL_PATH
    PHP_UPLOAD_MAX_FILESIZE
)
for var in "${vars[@]}"; do
    token_replace $var /usr/local/etc/php/php.ini
    token_replace $var /usr/local/etc/php/php-cli.ini
done

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
    set -- php-fpm "$@"
fi

exec "$@"
