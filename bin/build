#!/bin/bash

# exit on error, unset vars
set -eu
# exit early for errors in pipelines
set -o pipefail

usage() {
    cat << EOF
usage: $0 [options] major_version minor_version patch_version build

OPTIONS:
    -n        docker build with --no-cache.
    -d        Diff files using supplied utility e.g. diff.
    -v        Verbose output, prints every command to stdout.
    -h        Prints this help message.
EOF
}

# Options
cache=
diff=
while getopts ":nd:vh" opt; do
    case $opt in
        n)
            cache=--no-cache
            ;;
        d)
            diff=$OPTARG
            ;;
        v)
            set -x
            ;;
        h)
            usage
            exit
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            usage
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done

# Positional arguments
shift "$((OPTIND-1))"
if [ "$#" -ne 4 ]; then
    echo "Illegal number of parameters"
    usage
    exit 1
fi
version_major=$1
version_minor=$2
version_patch=$3
build=$4

v_full=$version_major.$version_minor.$version_patch
echo
echo Building "$v_full"
echo

## Dockerfile

write_version() {
    sed -i '' -E "s/^FROM php:([0-9\.]+)-fpm$/FROM php:${v_full}-fpm/" "$1"
}
write_version "$build/Dockerfile"

## Build
docker build $cache -f "$build/Dockerfile" -t "drupal-php:${v_full}-$build" "./$build"

# copy default config for comparison
mkdir -p "$build/conf-default/"{bin,etc,php-src}
curl -LsS "https://raw.githubusercontent.com/php/php-src/php-${v_full}/php.ini-development" > "$build/conf-default/php-src/php.ini-development"
curl -LsS "https://raw.githubusercontent.com/php/php-src/php-${v_full}/php.ini-production" > "$build/conf-default/php-src/php.ini-production"
container_id=$(docker run -d --rm "php:${v_full}-fpm")
docker cp "$container_id:/usr/local/etc" "$build/conf-default/"
docker kill "$container_id"

# diff
set +e
if [[ -n "$diff" ]]; then
    $diff "$build/conf-default/php-src/php.ini-development" "$build/conf/etc/php/php.ini"           &
    $diff "$build/conf-default/php-src/php.ini-production"  "$build/conf/etc/php/php.ini"           &
    $diff "$build/conf/etc/php/php.ini"                     "$build/conf/etc/php/php-cli.ini"       &
    $diff "$build/conf-default/etc"                         "$build/conf/etc"                       &
fi
